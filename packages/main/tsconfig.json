{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@tradercore/plugin-template-types": ["../types/src"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
